@{
    ViewData["Title"] = "Privacy Policy";
}
    
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<h1>Employees</h1>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Position</th>
            <th scope="col">Team name</th>
            <th scope="col">Hire date</th>
        </tr>
    </thead>
    <tbody id="bodyTable">


    </tbody>
</table>
<div class="dropdown">
    <input type="text" id="combobox" list="ComboBox" />
    <datalist id="ComboBox"   name="ComboBox">
      
    </datalist>
  
</div>
<script>
    $(document).ready(function () {
        var dataEmploees;
        var dataTeam;
        fetch(
            'https://localhost:44383/Home/Employee', {
                method: "GET",
                headers: { "Accept": "application/json" }
            })
            .then(response => response.json())
            .then(
                employees => {
                    dataEmploees = employees;
                    employees.map((i) => {
                        $("#bodyTable").append(`<tr id="rowId"><td>${i.name}</td><td>${i.position}</td><td>${i.teamName}</td><td>${i.hireDate}</td></tr>`)
                    });
                });
        fetch(
            'https://localhost:44383/Home/Teams', {
            method: "GET",
            headers: { "Accept": "application/json" }
        })
            .then(response => response.json())
            .then(
                teams => {
                    dataTeam = teams;
                    teams.map((i) => {
                        $("#ComboBox").append(`<option value=${i} >${i}</option>`)
                    });
                });
        $('#combobox').change(
           
            function () {
                debugger;
                var valueTeam = $('#combobox').val();
                $("#bodyTable").empty();
                if (valueTeam == "") {
                    dataEmploees.map((i) => {
                        $("#bodyTable").append(`<tr><td>${i.name}</td><td>${i.position}</td><td>${i.teamName}</td><td>${i.hireDate}</td></tr>`)
                    });
                }
                else {
                    dataEmploees.map((i) => {
                 
                        if (i.teamName.indexOf(valueTeam) != -1) {
                            console.log("in");
                            $("#bodyTable").append(`<tr><td>${i.name}</td><td>${i.position}</td><td>${i.teamName}</td><td>${i.hireDate}</td></tr>`)
                        }

                    });
                }
              
            }
        );
    });
</script>